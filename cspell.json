{
    "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
    "version": "0.2",
    "id": "root",
    "name": "Root Configuration",
    "description": "Root configuration for the project.",
    "enabled": true,
    "readonly": true,
    "import": [
        "./.cspell/configs/linux-dictionary.json",
        "./.cspell/configs/arch-linux-dictionary.json",
        "./.cspell/configs/project-dictionary.json"
    ],
    "useGitignore": true,
    "gitignoreRoot": ["."],
    "enableGlobDot": true,
    "ignorePaths": [".git"],
    "caseSensitive": false,
    "loadDefaultConfiguration": true,
    "unknownWords": "report-all"
}
